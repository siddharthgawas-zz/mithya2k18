<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/primaryColor">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Score Keys"
        android:gravity="center"
        android:textColor="@color/secondaryTextColor"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/scoreKey"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:orientation="vertical"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.026">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/scoreKey">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="POSITION"
                android:textStyle="bold"
                android:textSize="12sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ACE"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text="KING"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="QUEEN"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="JACK"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/header">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1st"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="2000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="750"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="300"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="2nd"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="750"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="200"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/row2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="3rd"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="500"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="250"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="100"
                android:textSize="12sp" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jokerRule"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/scoreKey"
        android:layout_marginTop="10dp"
        android:text="Joker Points Scheme"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/secondaryTextColor"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jokerNote"
        app:layout_constraintTop_toBottomOf="@id/jokerRule"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/secondaryTextColor"
        android:text="NOTE: The JOKER must be played on either an ACE or a KING events only."/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/jokerPoints"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jokerNote">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/jokerHead"
            app:layout_constraintTop_toBottomOf="@id/jokerPoints"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="POSITION"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="POINTS"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/jokerRow1"
            app:layout_constraintTop_toBottomOf="@id/jokerHead">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="1st"
                android:textSize="12sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:text="Double the Maximum Possible Points for the Event"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/jokerRow2"
            app:layout_constraintTop_toBottomOf="@id/jokerRow1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="2nd"
                android:textSize="12sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:text="0 Points"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/jokerRow3"
            app:layout_constraintTop_toBottomOf="@id/jokerRow2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="3rd"
                android:textSize="12sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:text="NEGATIVE of Half the Maximum Possible Points for the Event "
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/jokerRow4"
            app:layout_constraintTop_toBottomOf="@id/jokerRow3">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="4th"
                android:textSize="12sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:text="NEGATIVE of Double the Maximum Possible Points for the Event "
                android:gravity="center"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
</ScrollView>